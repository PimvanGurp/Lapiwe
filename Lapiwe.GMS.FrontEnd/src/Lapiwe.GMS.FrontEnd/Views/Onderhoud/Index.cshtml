<h1>Meld auto klaar</h1>
<form class="form-horizontal" asp-action="MeldAutoKlaar" asp-controller="Onderhoud" method="post">
    <div class="row">
        <div class="form-group col-sm-6">
            <label for="klant-voorletter">Klantnaam:</label>
            <input type="text" class="form-control" id="klant-voorletter" name="voornaam" placeholder="Voornaam">
            <input type="text" class="form-control" id="klant-voorletter" name="tussenvoegsel" placeholder="Tussenvoegsel">
            <input type="text" class="form-control" id="klant-achternaam" name="achternaam" placeholder="Achternaam">
        </div>
        <div class="form-group col-sm-6">
            <label for="auto-kenteken">Kenteken auto:</label>
            <input type="text" class="form-control" id="auto-kenteken" name="kenteken" placeholder="Kenteken">
            <br />
            <label for="auto-kilometerstand">Kilometerstand:</label>
            <input type="text" class="form-control" id="auto-kilometerstand" name="kilometerstand" placeholder="Kilometerstand">
        </div>
        <div class="form-group col-sm-6">
            <button type="submit" class="btn btn-primary">Klaar melden</button>
        </div>
    </div>
</form>