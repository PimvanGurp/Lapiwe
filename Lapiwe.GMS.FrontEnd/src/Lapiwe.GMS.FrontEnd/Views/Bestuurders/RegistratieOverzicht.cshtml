<h1>Nieuwe bestuurder registreren</h1>
<form asp-action="RegistreerBestuurder" asp-controller="Bestuurders">
    <div class="row">
        <div class="form-group col-sm-6">
            <label for="bestuurder-voornaam">Naam:</label>
            <input type="text" class="form-control" id="bestuurder-voornaam" name="voornaam" placeholder="Voornaam">
            <input type="text" class="form-control" id="bestuurder-tussenvoegsel" name="tussenvoegsel" placeholder="Tussenvoegsel">
            <input type="text" class="form-control" id="bestuurder-achternaam" name="achternaam" placeholder="Achternaam">
        </div>
        <div class="form-group col-sm-6">
            <label for="bestuurder-voornaam">Adresgegevens:</label>
            <input type="text" class="form-control" id="bestuurder-adres" name="adres" placeholder="Adres">
            <input type="text" class="form-control" id="bestuurder-postcode" name="postcode" placeholder="Postcode">
            <input type="text" class="form-control" id="bestuurder-woonplaats" name="woonplaats" placeholder="Woonplaats">
        </div>
        <div class="form-group col-sm-6">
            <label for="bestuurder-voornaam">Contactgegevens:</label>
            <input type="text" class="form-control" id="bestuurder-telefoonnummer" name="telefoonnummer" placeholder="Telefoonnummer">
            <input type="text" class="form-control" id="bestuurder-mail" name="emailadres" placeholder="Mail">
        </div>
        <div class="form-group col-sm-6">
            <button type="submit" class="btn btn-primary">Registreren!</button>
        </div>
    </div>
</form>
